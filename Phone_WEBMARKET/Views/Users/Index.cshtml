@model IEnumerable<Phone_WEBMARKET.Models.User>
@{
    ViewBag.Title = "Foydalanuvchilar ro'yhati";
}

<a asp-action="Create">Foydalanuvchi qo'shish</a>

<table class="table">
    <tr><th>Email</th><th>Name</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.FullName</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Tahrirlash</a>
                    <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Parolni almashtirish</a>
                    <button type="submit" class="btn btn-sm btn-danger">
                        O'chirish'
                    </button>
                </form>
            </td>
        </tr>
    }
</table>