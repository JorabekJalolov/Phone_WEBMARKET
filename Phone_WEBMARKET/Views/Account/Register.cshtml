@model Phone_WEBMARKET.ViewModels.RegisterViewModel

<form asp-controller="Account" asp-action="Register" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="col-xl-9">

        <h1 class="text-white mb-4">Registration</h1>

        <div class="card" style="border-radius: 15px;">
            <div class="card-body">

                <div class="row align-items-center pt-4 pb-3">
                    <div class="col-md-3 ps-5">

                        <label>F.I.O</label>

                    </div>
                    <div class="col-md-9 pe-5">
                        <input type="text" asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>

                    </div>
                </div>

                <hr class="mx-n3">

                <div class="row align-items-center py-3">
                    <div class="col-md-3 ps-5">

                        <label>Email</label>

                    </div>
                    <div class="col-md-9 pe-5">

                        <input type="text" asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                </div>

                <hr class="mx-n3">

                <div class="row align-items-center py-3">
                    <div class="col-md-3 ps-5">

                        <label >Password</label>

                    </div>
                    <div class="col-md-9 pe-5">

                        <input  asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                </div>
                <hr class="mx-n3">
                <div class="row align-items-center py-3">
                    <div class="col-md-3 ps-5">

                        <label>Confirm Password</label>


                    </div>
                    <div class="col-md-9 pe-5">
                        <input  asp-for="PasswordConfirm" class="form-control" />
                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                    </div>
                </div>
                <hr class="mx-n3">

                <div class="px-5 py-4">
                    <button type="submit" class="btn btn-primary btn-lg">Register</button>
                </div>

            </div>
        </div>

    </div>
</form>