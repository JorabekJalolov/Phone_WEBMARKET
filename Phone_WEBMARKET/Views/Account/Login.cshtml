@model Phone_WEBMARKET.ViewModels.LoginViewModel

<form asp-controller="Account" asp-action="Login" method="post" enctype="multipart/form-data" asp-route-returnUrl="@Model.ReturnUrl">
    <div class="col-xl-9">

        <h1 class="text-white mb-4">Login</h1>

        <div class="card" style="border-radius: 15px;">
            <div class="card-body">

                <div class="row align-items-center pt-4 pb-3">
                    <div class="col-md-3 ps-5">

                        <label>Email</label>

                    </div>
                    <div class="col-md-9 pe-5">
                        <input type="email" asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                </div>

                <hr class="mx-n3">

                <div class="row align-items-center py-3">
                    <div class="col-md-3 ps-5">

                        <label >Password</label>

                    </div>
                    <div class="col-md-9 pe-5">

                        <input  asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                </div>

              
                <hr class="mx-n3">

                <div class="px-5 py-4 text-center">
                    <button type="submit" class="btn btn-success btn-lg">Kirish</button>
                    <button asp-action="Register" class="btn btn-primary btn-lg">Ro'xatdan o'tish</button>
                   
                </div>

            </div>
        </div>

    </div>
</form>